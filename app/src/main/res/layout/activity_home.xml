<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:padding="5dp">
        <LinearLayout
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/rounded_active"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:id="@+id/linearHome">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivBackHome"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivHome"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/home_active" />
                </RelativeLayout>
                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Home"
                    android:textSize="@dimen/text_smoll"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearFeedback"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ivFeedback"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@drawable/home" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Karyawan"
                    android:textSize="@dimen/text_smoll"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearAbout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ivAbout"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@drawable/home" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Pengaturan"
                    android:textSize="@dimen/text_smoll"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>